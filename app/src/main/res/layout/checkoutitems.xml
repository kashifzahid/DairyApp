<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="1dp"
    app:cardMaxElevation="1dp"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_gravity="start|center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="3dp"
                android:layout_weight="0.5"

                android:contentDescription="Image of product"

                android:src="@drawable/dairy1"/>
            <Space
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <Space
                    android:layout_width="100dp"
                    android:layout_height="2dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/spacer"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spacer"
                android:text="100% pure Dairy Milk"
                android:id="@+id/productName"
                android:layout_centerVertical="true"


                android:textSize="10sp"
                />
            <TextView
                android:layout_width="100dp"
                android:id="@+id/checkOutSize"
                android:layout_height="wrap_content"
                android:text="50g-100g"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/productName"
                android:textSize="8sp"
                />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/checkOutSize"
                    android:layout_marginTop="2dp"

                    android:textColor="@android:color/holo_green_dark"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:text="x3"/>
            </RelativeLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="555 PKR"
                android:textSize="20sp"


                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_gravity="end|top"
                android:src="@android:drawable/ic_menu_delete"
                />


        </LinearLayout>

    </android.support.v7.widget.CardView>


